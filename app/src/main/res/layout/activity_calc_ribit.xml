<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/header"
        layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@id/header"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.82"
                    android:background="@drawable/edit_text_bg">
                    <EditText
                        android:id="@+id/etInitial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="סכום ראשוני"
                        android:gravity="right|center_vertical"
                        android:paddingEnd="15dp"
                        android:inputType="numberDecimal" />
                    <TextView
                        android:id="@+id/tvCurrencySymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="₪"
                        android:textColor="#1A237E"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btnCurrency"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.18"
                    android:layout_marginStart="8dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_bg"
                    android:src="@android:drawable/ic_menu_rotate"
                    app:tint="#1A237E" />
            </LinearLayout>

            <EditText android:id="@+id/etMonthly" android:layout_width="match_parent" android:layout_height="55dp" android:hint="הפקדה חודשית" android:background="@drawable/edit_text_bg" android:gravity="right|center_vertical" android:paddingEnd="15dp" android:layout_marginBottom="12dp" android:inputType="numberDecimal"/>
            <EditText android:id="@+id/etRate" android:layout_width="match_parent" android:layout_height="55dp" android:hint="ריבית שנתית %" android:background="@drawable/edit_text_bg" android:gravity="right|center_vertical" android:paddingEnd="15dp" android:layout_marginBottom="12dp" android:inputType="numberDecimal"/>
            <EditText android:id="@+id/etYears" android:layout_width="match_parent" android:layout_height="55dp" android:hint="מספר שנים" android:background="@drawable/edit_text_bg" android:gravity="right|center_vertical" android:paddingEnd="15dp" android:layout_marginBottom="12dp" android:inputType="number"/>
            <EditText android:id="@+id/etMonths" android:layout_width="match_parent" android:layout_height="55dp" android:hint="חודשים נוספים" android:background="@drawable/edit_text_bg" android:gravity="right|center_vertical" android:paddingEnd="15dp" android:layout_marginBottom="12dp" android:inputType="number"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/edit_text_bg">
                <EditText android:id="@+id/etFees" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/transparent" android:hint="דמי ניהול %" android:gravity="right|center_vertical" android:paddingRight="15dp" android:paddingLeft="45dp" android:inputType="numberDecimal" />
                <ImageView android:id="@+id/btnInfoFees" android:layout_width="45dp" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:padding="12dp" android:src="@android:drawable/ic_dialog_info" app:tint="#1A237E" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#2E7D32"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="חשב השקעה"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#1A237E"
                android:layout_marginBottom="12dp"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="לפירוט התוצאה"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A5D6A7"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="#1A237E"
        app:itemTextColor="#1A237E"
        app:labelVisibilityMode="labeled" />

</RelativeLayout>