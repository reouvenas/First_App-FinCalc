<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_direction="rtl">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#1A237E">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="InvestCalc"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_growth_graph" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מחשבון השקעות"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="סכום השקעה ראשוני (₪)"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etInitialAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="הכנס סכום"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר חודשים נוספים"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etExtraMonths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0-11"
                    android:inputType="number"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הפקדה חודשית (₪)"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etMonthlyDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="סכום קבוע בכל חודש"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אחוז תשואה שנתית (%)"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etInterestRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="למשל: 7.5"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר שנות השקעה"
                    android:textColor="#3F51B5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="זמן בשנים"
                    android:inputType="number"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="חשב עתיד פיננסי"
                android:backgroundTint="#1A237E"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:cornerRadius="15dp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="התוצאה תופיע כאן"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:gravity="center"
                android:paddingBottom="40dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>